<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">BlazorApp1</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href=@($"SinglePlayer/{Guid.NewGuid()}")>
                <span class="oi oi-home" aria-hidden="true"></span> Single Player Game
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href=@($"TwoPlayer/{Guid.NewGuid()}")>
                <span class="oi oi-plus" aria-hidden="true"></span> Two Player Game
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="CreateGame">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Create a Game
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="JoinGame">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Join a Game
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}